#!/usr/bin/env ruby
# frozen_string_literal: true

# podgen â€” Autonomous podcast generation pipeline
# https://github.com/your-user/podgen

root = File.expand_path("..", __dir__)
ENV["BUNDLE_GEMFILE"] ||= File.join(root, "Gemfile")

require "bundler/setup"
require "dotenv/load"

Signal.trap("INT")  { $stderr.puts "\nInterrupted."; exit 130 }
Signal.trap("TERM") { exit 143 }

require_relative File.join(root, "lib", "cli")
exit PodgenCLI.run(ARGV)
